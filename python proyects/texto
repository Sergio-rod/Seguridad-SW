import json
import os


def getJson(fileName):
    try:
        with open(fileName, 'r') as file:
            jsonData = json.load(file)
        return jsonData
    except:
        print("El json no es válido")


def printJson(jsonData):
    for index, object in enumerate(jsonData):
        print(f"{index}. {object}")


def existMail(mail, fileName):
    jsonData = getJson(fileName)
    jumpFirst = False
    if (len(jsonData)) == 1:
        return True
    else:
        for i in jsonData:
            if jumpFirst:
                if i["mail: "] == mail:
                    print("Este mail ya existe")
                    return False
            else:
                jumpFirst = True
    return True


def fileExists(fileName):
    try:
        return os.path.isfile(fileName)
    except:
        return False


def UserRegister(fileName):

    if not fileExists(fileName):
        with open(fileName, 'w') as fileName:
            fileName.write("[{}]")
            print("Se ha creado el archivo")
            exit()

    try:
        # obtener los datos del json
        jsonData = getJson(fileName)
        printJson(jsonData)
        condition = True
        while condition:
            if (len(jsonData) > 0):
                name = input("Enter name: ")
                if (name == ""):
                    condition = False
                    break
                password = input("Enter password: ")
                mail = input("Enter mail: ")

                # verifica mail
                mailBanner = existMail(mail, fileName)
                if mailBanner:
                    user = {"Username: ": name,
                            "Password: ": password, "mail: ": mail, "services: ": [{}]}
                    jsonData.append(user)
                    with open(fileName, "w") as file:
                        json.dump(jsonData, file)
                elif not mailBanner:
                    print("Vuelve a intentarlo")
            elif (len(jsonData == 0)):
                name = input("Enter name: ")
                if (name == ""):
                    condition = False
                    break
                password = input("Enter password: ")
                mail = input("Enter mail: ")
                user = {"Username: ": name,
                        "Password: ": password, "mail: ": mail, "services: ": [{}]}
                jsonData.append(user)
                with open(fileName, "w") as file:
                    json.dump(jsonData, file)

        printJson(jsonData)
    except:
        print("Algo ha ido mal")
        
        

def ServiceRegister(userName,userPassword,fileName):
 
    jsonData = getJson(fileName)
    condition = True
    jumpFirst = False
    while condition:
        for i in jsonData:
            if jumpFirst:
                if (i["Username: "]==userName):
                    name = input("Enter service name: ")
                    if(name==""):
                        condition= False
                        break
                    password=userPassword
                    user=userName
                    i["services: "].append({"Service Name: ":name, 
                                           "Service password: ":password,"User: ": user})
                    with open(fileName, "w") as file:
                        json.dump(jsonData,file)
                    return True
            else: jumpFirst = True
        return False
    printJson(jsonData)
    
    
def ShowServices(fileName,userName):
    jsonData = getJson(fileName)
    jumpFirst = False
    for i in jsonData:
        if jumpFirst:
            if i["Username: "]==userName:
                  services = i["services: "]
                  jumpService= False
                  for service in services:
                      if jumpService:
                       print(f"- {service['Service Name: ']}")
                      else: jumpService = True
        else: jumpFirst= True
            
        
    


def loginUser(name, password, fileName):
    loginStatus = False
    jsonData = getJson(fileName)
    jumpFirst = False
    for i in jsonData:
        if jumpFirst:
            if (i["Username: "] == name) and (i["Password: "] == password):
                loginStatus = True
                break
        else:jumpFirst=True    
    return loginStatus

    # return loginStatus


def ReadFile(fileName):
    with open(fileName, 'r') as file:
        users = json.load(file)

        for i, user in enumerate(users):
            print(f"{i}. {user}")


def undefinedFunction():
    print("Undefined function")


def deleteUser(name, fileName):
    jsonData = getJson(fileName)
    foundStatus = False
    for i in jsonData:
        if i["Username: "] == name:
            jsonData.remove(i)
            found = True
            break
    if found:
        with open(fileName, "w") as file:
            json.dump(jsonData, file)
        print(f"El usuario '{name}' ha sido eliminado")
    else:
        print(f"No se encontró el usuario '{name}' en el archivo")


def modifyUserField(fileName, name, field):
    try:
        jsonData = getJson(fileName)
        for i in jsonData:
            if i["Username: "] == name:
                i[field] = input(f"Enter new {field}: ")
                with open(fileName, "w") as file:
                    json.dump(jsonData, file)
                print(f"{field} updated for {name}")
                return True
        print(f"User '{name}' not found")
        return False
    except:
        print("An error occurred")
        return False
    
    
    
    
def subMenu(userName,userPassword,fileName):
    condition = True
    while condition:
        print(f"-----------Bienvenid@-{name}----------")
        print("1) Agregar servicios", "2) Ver servicios", "3) Salir")
        y = int(input("Ingrese la opción deseada (1,2,3)"))
        
        if y==1:
            ServiceRegister(userName, userPassword, fileName)
        elif y==2:
            ShowServices(fileName,userName)
        elif y==3:
            print("Adios")
            condition=False
            exit()
        else: print("Ingresa una opción valida")
        
            


print("------------Opciones-------------")
print("1) Registrar Usuario ", "2) Iniciar sesión ", "3) Salir ")
