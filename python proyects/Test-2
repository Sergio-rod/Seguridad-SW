def recoverUser():
	try:
		file=open("texto.txt")
		file.close()
	except:
		file = open("texto.txt","w")
		file.write('{"accounts": []}')
		file.close()
		file = open("texto.txt","r") 
		cadena = file.read()
		loadjson = json.loads(cadena)
		file.close()
		loadjson['accounts'].append(
			{
				"username": _user,
				"_pass": _sha256,
				"services": [	
				]
			}
		)
		file = open("texto.txt","w") 
		json.dump(loadjson, file, indent=4)
		file.close()
		print("\x1b[0;30m"+"Recuperando usuario\n")
		print("\x1b[0;37m"+"\n")
