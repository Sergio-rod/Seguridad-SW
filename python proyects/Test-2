def keys():
	kdf = PBKDF2HMAC(
        algorithm=hashes.SHA512,
        length=32,
        salt=login_salt,
        iterations=100000,
        backend=default_backend(),
    )
	newhash = hashlib.sha512(_sha256.encode('utf-8')).hexdigest()
	newhash = bytes(newhash,encoding = "utf-8")
	der = base64.urlsafe_b64encode(kdf.derive(newhash))
	return der

def encrypt(data):
	try:
		encryption_key = keys()
		encryption_key_fernet = Fernet(encryption_key)
		encrypt_info = encryption_key_fernet.encrypt(data)
		return(encrypt_info.decode())
	except:
		print("âš 	Archivo corrupto.")
		menuLogin()

def decrypt(data):
	try:
		dencryption_key = keys()
		data= data.encode("utf-8")
		dencryption_key_fernet = Fernet(dencryption_key)
		dencrypt_info = dencryption_key_fernet.decrypt(data)
		return(dencrypt_info.decode())
	except:
		print("âš 	Archivo corrupto.")
		menuLogin()

def sigin():
	try:
		loadjson = []
		openWhenLoad(1)
		file = open("texto.txt","r")
		cadena = file.read()
		file.close()
		loadjson = json.loads(cadena)
		counter = 0
		username = input("ğŸ‘¤	Introduce un nombre de usuario\n")
		while username.strip() == "":
			username = input("ğŸ‘¤	Introduce un nombre de usuario, no un espacio vacÃ­o\n")
		for idx, obj in enumerate(loadjson.get('accounts')):		
			if obj['username'] == username:
				counter += 1
		if (counter > 0):
			print("ğŸ‘¤âŒ	Este nombre de usuario ya estÃ¡ en uso.\n")
			sigin()
		else:
			_pass = input("ğŸ”‘	Introduce una contraseÃ±a\n")
			while _pass.strip() == "":
				_pass = input("ğŸ”‘	Introduce una contraseÃ±a, no un espacio vacÃ­o\n")
			my_hash = hashlib.sha256(_pass.encode('utf-8')).hexdigest()
			loadjson['accounts'].append(
				{
					"username": username,
					"_pass": my_hash,
					"services": [	
					]
				}
			)
			openWhenLoad(1)
			file = open("texto.txt","w")
			json.dump(loadjson, file, indent=4)
			file.close()
			print("\x1b[0;32m"+"âœ…	Registro exitoso!\n")
			start()
	except KeyboardInterrupt:
		print("ğŸ¤© Saliendo del formulario.")
		start()
	except EOFError:
		print("ğŸ¤© Entrada incorrecta.")
		sigin()

def add():
	try:
		servicio = input("â›½	Introduce un servicio\n")
		while servicio.strip() == "":
			servicio = input("â›½ Introduce un servicio! \n")
		user = input("ğŸ‘¤	Introduce un usuario\n")
		while user.strip() == "":
			user = input("ğŸ‘¤	Introduce un usuario\n")
		password = input("ğŸ”‘	Introduce una password\n")
		while password.strip() == "":
			password = input("ğŸ”‘	Introduce una password\n")
		recoverUser()
		openWhenLoad(2)
		file = open("texto.txt","r")
		cadena = file.read()
		file.close()
		loadjson = json.loads(cadena)
		x_x = 0
		for idx, obj in enumerate(loadjson['accounts']):
			if(obj['username'] == _user and obj['_pass'] == _sha256):
				loadjson["accounts"][idx]["services"].append({
				"service": encrypt(bytes(servicio,encoding="utf-8")),
				"user": encrypt(bytes(user,encoding="utf-8")),
				"pass": encrypt(bytes(password,encoding="utf-8"))})
				file = open("texto.txt","w")
				json.dump(loadjson, file, indent=4)
				file.close()
				x_x +=1
		if x_x == 0:
			print("Se han modificado las credenciales. Saliendo...")
			start()
	except KeyboardInterrupt:
		print("ğŸ¤© Saliendo del formulario.")
		menuLogin()
	except EOFError:
		print("ğŸ¤© Entrada incorrecta.")
		add()
def showAll():
