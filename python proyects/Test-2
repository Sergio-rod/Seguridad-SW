def editElement():
	openWhenLoad(7)
	file=open("texto.txt","r")
	print("-----mostrando " + file.name + "-------------")
	loadjson = json.load(file)
	file.close()
	ida = 0
	x_x= 0
	for idx, obj in enumerate(loadjson['accounts']):
		if (obj['username'] == _user):
			newobj = obj['services']
			ida = idx
			for idxs, data in enumerate(newobj):
				print("[" + str(x_x) + "] Service: " + decrypt(data['service']) + ", User: " + decrypt(data['user']) + ", Pass: " + decrypt(data['pass']))
				x_x += 1

	if x_x == 0:
		print("ğŸ“		No hay registros para mostrar. ")
		menuLogin()
	else:
		ids = input("ğŸ›’	Introduce un indice de un elemento a editar:\n")
		bolillo = False
		bolillo2 = False
		while bolillo == False or bolillo2 == False:
			if str(ids).isdigit()==False:
				bolillo = False
			else:
				bolillo = True
				if (int(ids) < 0 or int(ids)>=x_x):
					bolillo2 = False
				else:
					bolillo2	= True
			if bolillo == False:
				ids = input("ğŸ›’	Introduce un indice numÃ©rico de un elemento a editar:\n")
			else:
				if bolillo2 == False:
					ids = input("ğŸ›’	Introduce un indice vÃ¡lido de un elemento a editar:\n")
		ids = int(ids)

		servicio = input("â›½	Editando servicio\n")
		while servicio == "":
			servicio = input("â›½ Editando servicio, sabe! \n")
		user = input("ğŸ‘¤	Editando usuario\n")
		while user == "":
			user = input("ğŸ‘¤	Editando usuario, sabe!\n")
		password = input("ğŸ”‘	Editando password\n")
		while password == "":
			password = input("ğŸ”‘	Editando password, sabe!\n") 
		openWhenLoad(7)
		loadjson["accounts"][ida]["services"][int(ids)]['service'] = encrypt(bytes(servicio, encoding = "utf-8"))
		loadjson["accounts"][ida]["services"][int(ids)]['user'] = encrypt(bytes(user, encoding = "utf-8"))
		loadjson["accounts"][ida]["services"][int(ids)]['pass'] = encrypt(bytes(password, encoding = "utf-8"))
		openWhenLoad(7)
		recoverUser()
		file = open("texto.txt","w")
		json.dump(loadjson, file, indent=4)
		file.close()			

def start():
	try:
		openWhenLoad(0)
		entrada = input("\x1b[0;37m"+"1ï¸âƒ£ Ingresar\n2ï¸âƒ£ Registrar\n3ï¸âƒ£ Salir\n")
		if entrada.isdigit():
			if entrada == "1":
				ingresar()
			elif entrada == "2":
				sigin()
			elif entrada=="3":
				exit()
			else:
				print("ğŸ’¢ Valor fuera del rango.")
				start()
		else:
			print("âŒ La entrada no es numÃ©rica!")
			start()

	except KeyboardInterrupt:
		print("\nğŸ¤© Alto ahÃ­, loca.")
		start()
	except EOFError:
		print("\nâŒ La entrada no es correcta!")
		start()

	

def menuLogin():
	try:
		option=""
		while option != "0":
			print("0ï¸âƒ£.-logout 1ï¸âƒ£.-add 2ï¸âƒ£.-show all 3ï¸âƒ£.-show element 4ï¸âƒ£.-delete element 5ï¸âƒ£.-edit element")
			option = input()
			if option.isdigit():
				if option == "1":
					add()
				elif option == "2":
					showAll()
				elif option == "3":
					showElement()
				elif option == "4":
					deleteElement()
				elif option == "5":
					editElement()
				elif option == "0":
					start()
				else:
					print("El valor excede el rango permitido.\n")
					menuLogin()
			else:
				print("Valor numÃ©rico requerido.\n")
				menuLogin()
	except KeyboardInterrupt:
		print("\nğŸ¤© Debes cerrar sesiÃ³n primero.")
		menuLogin()
	except EOFError:
		print("\nâŒ La entrada no es correcta!")
		menuLogin()
